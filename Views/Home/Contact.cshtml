@model BasePackageModule1.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}


<section class="page-banner">
    <div class="image-layer" style="background-image:url(images/background/image-7.jpg);"></div>
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="banner-inner">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <h1>Contact</h1>
                <div class="page-nav">
                    <ul class="bread-crumb clearfix">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="active">Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Banner Section -->

<section class="contact-section">
    <div class="auto-container">
        <div class="sec-title centered">
            <h2>Offices near you<span class="dot">.</span></h2>
        </div>

        <div class="upper-info">
            <div class="row clearfix">
                <div class="info-block col-xl-12 col-lg-12 col-md-12 col-sm-12 wow fadeInUp" data-wow-delay="0ms"
                     data-wow-duration="1500ms">
                    <div class="inner-box">
                        <h5 class="text-center">Mumbai</h5>
                        <div class="text" style="text-align:center;">
                            <ul class="info">
                                <li>@Model.BusinessProfile.Address</li>
                                <li><a href="mailto:@Model.BusinessProfile.EmailAddress">@Model.BusinessProfile.EmailAddress</a></li>
                                <li><a href="tel:@Model.BusinessProfile.DisplayContact1">@Model.BusinessProfile.EmailAddress</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

               

            </div>
        </div>
       
        <div class="sec-title">
            <h2>Write Us a Message<span class="dot">.</span></h2>
        </div>
        <div class="default-form">
            <form method="post" action="sendemail.php" id="contact-form">
                <div class="row clearfix">
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="field-inner">
                            <input type="text" name="username" value="" placeholder="Your Name" required="">
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="field-inner">
                            <input type="email" name="email" value="" placeholder="Email Address"
                                   required="">
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="field-inner">
                            <input type="text" name="phone" value="" placeholder="Phone Number" required="">
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <div class="field-inner">
                            <input type="text" name="subject" value="" placeholder="Subject" required="">
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <div class="field-inner">
                            <textarea name="message" placeholder="Write Message" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <button class="theme-btn btn-style-one">
                            <i class="btn-curve"></i>
                            <span class="btn-title">Send message</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
   
</section>

