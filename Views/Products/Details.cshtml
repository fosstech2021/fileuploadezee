@using BasePackageModule1.Extensions
@model BasePackageModule1.Models.Product

<!-- Banner Section -->
<section class="page-banner">
   
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="banner-inner">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <h1>@Model.Name</h1>
                <div class="page-nav">
                    <ul class="bread-crumb clearfix">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li><a asp-action="Index" asp-controller="Products">Services</a></li>
                        <li class="active">@Model.Name</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Banner Section -->

<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-12 col-sm-12">
                <div class="service-details">
                    <div class="main-image image">
                        <img src="@Model.Image" alt="">
                    </div>
                    <div class="text-content">
                        <h3>@Model.Name</h3>
                        @Html.Raw(Model.Description)
                       
                    </div>
                </div>
            </div>

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12">
                <aside class="sidebar blog-sidebar">

                    <div class="sidebar-widget services">
                        <div class="widget-inner">
                            <div class="sidebar-title">
                                <h4>All Services</h4>
                            </div>
                            <ul>
                                @foreach (var product in ViewBag.Funds)
                                {
                                    <li><a asp-action="Details" asp-controller="Products" asp-route-id="@product.Id">@product.Name</a></li>
                                }

                              
                            </ul>
                        </div>
                    </div>

                    <div class="sidebar-widget call-up">
                        <div class="widget-inner">
                            <div class="sidebar-title">
                                <h4>need Linoor help?</h4>
                            </div>
                           
                            <div class="phone">
                                <a href="tel:8850457445">
                                    <span class="icon flaticon-call"></span>8850457445
                                </a>
                            </div>
                        </div>
                    </div>


                </aside>
            </div>

        </div>
    </div>
</div>

