@using BasePackageModule1.Models
@model BasePackageModule1.Models.Post
@{
    ViewData["Title"] = @Model.Title;
}

@section MetaTags
{
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="description" content="@Model.MetaDescription" />
}



<!-- Banner Section -->
<section class="page-banner">
    <div class="image-layer" style="background-image:url(images/background/image-7.jpg);"></div>
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="banner-inner">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <h1>Blog Posts</h1>
                <div class="page-nav">
                    <ul class="bread-crumb clearfix">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="active">Blog Single</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Banner Section -->

<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-12 col-sm-12">
                <div class="blog-details">
                    <!--News Block-->
                    <div class="post-details">
                        <div class="inner-box">
                            <div class="image-box">
                                <a href="blog-single.html"><img src="@Model.Image" alt=""></a>
                            </div>
                            <div class="lower-box">
                                <div class="post-meta">
                                    <ul class="clearfix">
                                        <li><span class="far fa-clock"></span> @Model.CreatedAt.ToLongDateString()</li>

                                    </ul>
                                </div>
                                <h4>@Model.Title</h4>
                                <div class="text">
                                    @Html.Raw(Model.Content)
                                </div>
                            </div>
                        </div>

                    </div>

                    <!--Comments Area-->

                </div>
            </div>

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12">
                <aside class="sidebar blog-sidebar">
                    <!--Sidebar Widget-->
                    

                    <div class="sidebar-widget recent-posts">
                        <div class="widget-inner">
                            <div class="sidebar-title">
                                <h4>Latest Posts</h4>
                            </div>

                            @foreach (var post in ViewBag.Posts)
                            {
                                <div class="post">
                                    <figure class="post-thumb">
                                        <img src="@post.Image" alt="">
                                    </figure>
                                    <h5 class="text"><a asp-action="Details" asp-controller="Blog" asp-route-id="@post.Id">@post.Title</a></h5>
                                </div>
                            }


                           

                        </div>
                    </div>

                   


                </aside>
            </div>


        </div>
    </div>
</div>