@model IList<BasePackageModule1.Models.Post>

<!-- Banner Section -->
<section class="page-banner">
    <div class="image-layer" style="background-image:url(images/background/image-7.jpg);"></div>
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="banner-inner">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <h1>Blog Posts</h1>
                <div class="page-nav">
                    <ul class="bread-crumb clearfix">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="active">Blog Posts</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Banner Section -->
<!-- News Section -->
<section class="news-section">
    <div class="auto-container">

        <div class="row clearfix">
            @foreach (var blog in Model)
            {
                <!--News Block-->
                <div class="news-block col-lg-4 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0ms"
                     data-wow-duration="1500ms">
                    <div class="inner-box">
                        <div class="image-box">
                            <a href="blog-single.html"><img src="@blog.Image" alt=""></a>
                        </div>
                        <div class="lower-box">
                            <div class="post-meta">
                                <ul class="clearfix">
                                    <li><span class="far fa-clock"></span> @blog.CreatedAt.ToLongDateString()</li>
                                   
                                </ul>
                            </div>
                            <h5><a asp-action="Details" asp-controller="Blog" asp-route-id="@blog.Id">@blog.Title</a></h5>
                            
                            <div class="link-box">
                                <a class="theme-btn" asp-action="Details" asp-controller="Blog" asp-route-id="@blog.Id">
                                    <span class="flaticon-next-1"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--News Block-->
            }

           
        </div>
       
    </div>
</section>
